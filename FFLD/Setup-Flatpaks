		flatpak install org.gtk.Gtk3theme.adw-gtk3 -y
		flatpak install org.gtk.Gtk3theme.adw-gtk3-dark -y
		#flatpak install com.google.Chrome -y
		flatpak install de.haeckerfelix.Shortwave -y
		flatpak install de.haeckerfelix.Fragments -y
		flatpak install org.nickvision.tubeconverter -y
		flatpak install org.nickvision.tagger -y
		flatpak install com.github.neithern.g4music -y
		flatpak install com.github.tchx84.Flatseal -y
		flatpak install com.github.hugolabe.Wike -y
		flatpak install io.bassi.Amberol -y
		flatpak install com.github.huluti.Curtail -y
		#flatpak install io.github.celluloid_player.Celluloid -y
		flatpak install io.github.giantpinkrobots.flatsweep -y
		flatpak install io.gitlab.adhami3310.Impression -y		
        flatpak install com.github.johnfactotum.Foliate -y
        flatpak install io.github.flattool.Warehouse -y
		flatpak install it.mijorus.gearlever -y
        flatpak install org.localsend.localsend_app -y
		flatpak install dev.alextren.Spot -y
		flatpak install de.schmidhuberj.tubefeeder -y
		flatpak install io.github.tfuxu.floodit
		flatpak install re.sonny.Junction -y
		flatpak install dev.geopjr.Tuba -y
		flatpak install io.github.dzheremi2.lrcmake-gtk -y
		flatpak install io.github.fabrialberio.pinapp  -y
		flatpak install io.github.halfmexican.Mingle -y
		flatpak install io.github.swordpuffin.hunt -y
		flatpak install io.gitlab.news_flash.NewsFlash -y
		flatpak install flathub io.github.revisto.drum-machine -y
		flatpak install flathub dev.bragefuglseth.Keypunch -y
		flatpak install flathub xyz.safeworlds.hiit -y
		flatpak install flathub de.swsnr.pictureoftheday -y
		flatpak install flathub app.drey.KeyRack -y
		flatpak install flathub com.belmoussaoui.Decoder -y
		flatpak install flathub re.sonny.Eloquent -y
		flatpak install flathub dev.geopjr.Calligraphy -y
		flatpak install flathub com.icons8.Lunacy -y
		flatpak install flathub com.spotify.Client -y
		flatpak install flathub net.nokyan.Resources -y
		#flatpak install im.bernard.Nostalgia -y
		#flatpak install re.sonny.Commit -y
		#git config --global core.editor "flatpak run --file-forwarding re.sonny.Commit @@"
		break
	  	;;
	  	#
	  	"No")
        sleep 2s
	  	break
	  	;;
	  	*) echo invalid option;;
	     esac
	  done
	  #
#